<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_main_label"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="15pt"
        android:background="@color/colorPrimary"
        android:text="로그인"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText_main_searchKeyword1"
            android:layout_width="130dp"
            android:textAlignment="center"
            android:hint="아이디"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/textView_main_label"
            app:layout_constraintBottom_toTopOf="@id/editText_main_searchKeyword2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText_main_searchKeyword2"
            android:layout_width="130dp"
            android:textAlignment="center"
            android:hint="비밀번호"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_main_searchKeyword1"
            app:layout_constraintBottom_toTopOf="@id/button_main_search"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/editText_main_searchKeyword2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/listView_main_list"
            android:text="로그인" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_main_search"
        android:id="@+id/listView_main_list"/>

    <TextView
        android:id="@+id/textView_main_result"
        app:layout_constraintTop_toBottomOf="@id/listView_main_list"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_main_label"
        android:id="@+id/listlist">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>